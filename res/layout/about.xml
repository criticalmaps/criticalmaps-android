<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/root_layout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#FFFFFFFF"
              android:layout_weight="1"
              android:orientation="vertical">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="critical mass berlin"
                    style="@style/about_heading"/>
            <TextView
                    android:text="www.criticalmass-berlin.org"
                    android:autoLink="web"
                    style="@style/about_content"/>

            <TextView
                    android:text="logo"
                    style="@style/about_heading"/>
            <TextView
                    android:text="www.thomas-hollnack.de"
                    android:autoLink="web"
                    style="@style/about_content"/>
            <TextView
                    android:text="code"
                    style="@style/about_heading"/>
            <TextView
                    android:text="www.stephanlindauer.de"
                    android:autoLink="web"
                    style="@style/about_content"/>
            <TextView
                    android:text="please help finance the tracking server!"
                    style="@style/about_heading"/>

            <Button
                    android:drawableTop="@drawable/paypal"
                    android:gravity="left|center_vertical"
                    style="@style/about_button"/>
            <Button
                    android:drawableTop="@drawable/paypal"
                    android:gravity="left|center_vertical"
                    style="@style/about_button"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>

