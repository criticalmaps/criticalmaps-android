<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="@color/about_background"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/about_heading"
                android:text="social krams" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/about_facebook"
                    style="@style/about_button"
                    android:drawableTop="@drawable/facebook"
                    android:gravity="left|center_vertical" />

                <Button
                    android:id="@+id/about_twitter"
                    style="@style/about_button"
                    android:drawableTop="@drawable/twitter"
                    android:gravity="left|center_vertical" />
            </LinearLayout>

            <TextView
                style="@style/about_heading"
                android:text="website" />

            <TextView
                style="@style/about_content"
                android:autoLink="web"
                android:text="criticalmaps.net" />

            <TextView
                style="@style/about_heading"
                android:text="contributions" />

            <TextView
                style="@style/about_content"
                android:text="&#8226; Gitti la Mar (Logo)
                            \n&#8226; Jan Rabe (Code)
                            \n&#8226; Christian Balster (Code)
                            \n&#8226; Ligi (Code)
                            \n&#8226; Caner BaÅŸaran (Translation)
                            \n&#8226; Tobias Preuss (Code)" />

            <TextView
                style="@style/about_heading"
                android:text="code" />

            <TextView
                style="@style/about_content"
                android:autoLink="web"
                android:text="github.com/stephanlindauer/criticalmaps-android" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

