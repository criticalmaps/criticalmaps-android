<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:layout_weight="1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="social krams"
                style="@style/about_heading" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:drawableTop="@drawable/facebook"
                    android:gravity="left|center_vertical"
                    android:id="@+id/about_facebook"
                    style="@style/about_button" />

                <Button
                    android:drawableTop="@drawable/twitter"
                    android:gravity="left|center_vertical"
                    android:id="@+id/about_twitter"
                    style="@style/about_button" />
            </LinearLayout>

            <TextView
                android:text="website"
                style="@style/about_heading" />

            <TextView
                android:text="criticalmaps.net"
                android:autoLink="web"
                style="@style/about_content" />

            <TextView
                android:text="logo"
                style="@style/about_heading" />

            <TextView
                android:text="gitti la mar"
                style="@style/about_content" />

            <TextView
                android:text="code"
                style="@style/about_heading" />

            <TextView
                android:text="github.com/stephanlindauer/criticalmaps-android"
                android:autoLink="web"
                style="@style/about_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

