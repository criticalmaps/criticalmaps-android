<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/about_background"
    tools:menu="actionbar_buttons">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/about_heading"
            android:text="@string/about_heading_social" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/about_facebook"
                android:src="@drawable/facebook"
                style="@style/about_button" />

            <ImageButton
                android:id="@+id/about_twitter"
                android:src="@drawable/twitter"
                style="@style/about_button" />
            
        </LinearLayout>

        <TextView
            style="@style/about_heading"
            android:text="@string/about_heading_website" />

        <TextView
            style="@style/about_content"
            android:autoLink="web"
            android:text="@string/about_text_map_url" />

        <TextView
            style="@style/about_heading"
            android:text="@string/about_heading_contributions" />

        <TextView
            style="@style/about_content"
            android:text="@string/about_text_contributors" />

        <TextView
            style="@style/about_heading"
            android:text="@string/about_heading_code" />

        <TextView
            style="@style/about_content"
            android:autoLink="web"
            android:text="@string/about_text_github_url" />
    </LinearLayout>
</ScrollView>
